<!DOCTYPE html>
<html>
<% include ./partials/header %>

	<body>

<form action="/add/tools" method='POST' >
		<select name="tool" id='dropdown'>
		<% tools.forEach(function(tool){ %>
	  <option class="to-dropdown" value=<%=tool._id%> >  <%=tool.name%> </option>
	 <% });%>
		</select>
<br>
<hr>
			<select name="coName" id="coDrop">
			</select>
<br>
<hr>
			<button>Submit </button>
		</form>


		<% include ./partials/footer %>

		<script>
		// Dynamic Loading of Tools
			$('.to-dropdown').click(function () {
				var toolID = $("#dropdown option:selected").val();
				console.log(toolID);
				$.get('/api/OOPM/co/'+toolID, function(data, status){
		        console.log(data);
						var tools = [];
						for(t in data){
							tools.push('<option value=' + data[t]._id + '>' + data[t].name +  '</option> ')
						}
						$('#coDrop').html(tools.join("  "))
		    });

			})
		</script>
	</body>

</html>
